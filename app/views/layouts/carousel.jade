div.container
	div.carousel.slide(id="carousel")
		ol.carousel-indicators.custom-carousel-indicators
			li.active(data-target="#carousel",data-slide-to="0")
			li(data-target="#carousel",data-slide-to="1")
			li(data-target="#carousel",data-slide-to="2")
		div.carousel-inner
			div.item.active
				div.row
					div.col-lg-5.col-lg-offset-1
						h2 Toutes les épreuves d'endurance rassemblées sur un même site
						p Triathlon , Trail, VTT, Cyclo...
					div.col-lg-6
						iframe(width="420" height="315" src="//www.youtube.com/embed/t7xmvmTFacw" frameborder="0" allowfullscreen)
			div.item
				div.row
					div.col-lg-5.col-lg-offset-1
						h2 Trouver et préparer votre course
						p Analyser le détail du parcours (dénivelé, altitude, distance...)
					div.col-lg-6
						img(id="reponsive-img", src="/img/show_screenshot.png", style="width: 100%; height:auto;display: inline-block;")
			div.item
				div.row
					div.col-lg-5.col-lg-offset-1
						h2 Promouvoir votre manifestation
						p Détailler l'ensemble de votre manifestion (parcours, organisation, nombre de places...)
						button.btn.btn-primary.btn-lg(data-ng-click="goToNewRace()") Commencer maintenant !
					div.col-lg-6
						img(id="reponsive-img", src="/img/edit_screenshot.png", style="width: 100%; height:auto;display: inline-block;")