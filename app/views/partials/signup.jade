div.container(style="margin-top:50px")
	div.row
		div.col-lg-4.col-lg-offset-4
			div.panel.panel-default
				div.panel-heading <strong>S'inscrire</strong>
				div.panel-body
					form(id="signupForm",role="form", name="form", novalidate)
						div.form-group(ng-class="{'has-error': !form.username.$pristine && form.username.$invalid, 'has-success': !form.username.$invalid && !form.username.$pristine}")
							label.control-label(for="username") Nom complet
							input.form-control(type="text", name="username", id="username", placeholder="Nom complet",data-ng-model="user.username",  ng-minlength="4", ng-maxlength="30", required)
							span.help-block(ng-show="form.username.$dirty && form.username.$error.required") Please choose a username
							span.help-block(ng-show="form.username.$dirty && form.username.$error.invalidChars") Username may not contain any non-url-safe characters
							span.help-block(data-ng-show="form.username.$dirty && form.username.$error.minlength") Votre nom doit contenir entre 4 et 30 caractères
							span.help-block(data-ng-show="form.username.$dirty && form.username.$error.maxlength") Votre nom doit contenir entre 4 et 30 caractères
						div.form-group(ng-class="{'has-error': !form.email.$pristine && form.email.$invalid, 'has-success': !form.email.$invalid && !form.email.$pristine}")
							label.control-label(for="email") Email
							input.form-control(type="email", name="email", id="email", placeholder="Email", unique-email, data-ng-model="user.email", required)
							span.help-block(ng-show="form.email.$dirty && form.email.$error.required") Veuillez saisir votre email
							span.help-block(ng-show="form.email.$error.email") Email invalide
							span.help-block(ng-show="form.email.$dirty && form.email.$error.isTaken") Cette adresse email est déjà prise
						div.form-group(ng-class="{'has-error': !form.password.$pristine && form.password.$invalid, 'has-success': !form.password.$invalid && !form.password.$pristine}")
							label.control-label(type="password", for="password") Mot de passe
							input.form-control(type="password", name="password",  id="password", placeholder="Mot de passe",data-ng-model="user.password",  required, match="confirmPassword", ng-minlength="4", ng-maxlength="8")
							span.help-block(ng-show="form.password.$dirty && form.password.$error.required") Please enter a password
							span.help-block(data-ng-show="form.password.$dirty && form.password.$error.minlength") Votre mot de passe doit contenir entre 4 et 8 caractères
							span.help-block(data-ng-show="form.password.$dirty && form.password.$error.maxlength") Votre mot de passe doit contenir entre 4 et 8 caractères
						div.form-group(ng-class="{'has-error': !form.confirmPassword.$pristine && form.confirmPassword.$invalid, 'has-success': !form.confirmPassword.$error.match && !form.confirmPassword.$pristine}")
							label.control-label(for="confirmPassword") Confirmer le mot de passe
							input.form-control(type="password", name="confirmPassword", placeholder="Confirmer le mot de passe", required, match="confirmPassword",data-ng-model="confirmPassword"))
							span.help-block(ng-show="form.confirmPassword.$dirty && form.confirmPassword.$error.required") Please repeat your password
							span.help-block(ng-show="form.confirmPassword.$dirty && form.confirmPassword.$error.match && !form.confirmPassword.$error.required") Passwords don't match
						div.alert.alert-danger.fade.hide(ng-show="message")
						button.btn.btn-primary(type="submit", ng-click="submit()", ng-disabled="form.$invalid") Envoyer