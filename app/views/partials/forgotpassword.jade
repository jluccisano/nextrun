div.modal-dialog
	div.modal-content
		div.modal-header
			button.close(type="button",data-dismiss="modal",aria-hidden="true", ng-click="cancel()") &times;
			h4.modal-title Entrez votre adresse email:
		div.modal-body
			div.row
				div.col-lg-10
					form(id="forgotPasswordForm", role="form", name="form", style="margin-top:50px", novalidate)
						div.form-group(ng-class="{'has-error': !form.$pristine && form.email.$invalid, 'has-success': !form.email.$invalid}")
							label.control-label(for="email") Email
							input.form-control(type="email", data-ng-model="user.email", name="email", id="email", placeholder="Email", required)
							span.help-block(ng-show="form.email.$dirty && form.email.$error.required") Veuillez saisir votre email
							span.help-block(ng-show="form.email.$error.email") Email invalide
						if error
							div.alert-danger.fade.hide.errors #{error}
						button.btn.btn-default(type="button", ng-click="cancel()") Annuler
						button.btn.btn-primary(type="submit", ng-click="submit()", ng-disabled="form.$invalid") Envoyer

		div.modal-footer
