div.container(ng-controller='LoginCtrl', style="margin-top:50px")
	div.row
		div.col-lg-4.col-lg-offset-4
			div.panel.panel-default
				div.panel-heading Se connecter
				div.panel-body
					form(id="loginForm", role="form", name="form")
						input(id="_csrf", type='hidden', name='_csrf', value="#{csrf_token}")
						div.form-group
							label(for="inputEmail") Email
							input.form-control(type="email", name="email", id="email", placeholder="Email"))
						div.form-group
							label.control-label(for="password") Mot de passe
							input.form-control(type="password", name="password", id="password", placeholder="Mot de passe")
						div.alert.alert-danger.fade.hide(id="invalidEmailOrPassword")
						button.btn.btn-primary(type="submit") Se connecter
						button.btn.btn-link(id="signupLink", type="button", ng-click="signup()") S'inscrire
