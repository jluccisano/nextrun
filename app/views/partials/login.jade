div.container(data-ng-controller='LoginCtrl', style="margin-top:50px")
	div.row
		div.col-lg-4.col-lg-offset-4
			div.panel.panel-default
				div.panel-heading <strong>Se connecter</strong>
				div.panel-body
					form(id="loginForm", role="form")
						input(id="_csrf", type='hidden', name='_csrf', value="#{csrf_token}" ,data-ng-model="user._csrf")
						div.form-group
							label.control-label(for="email") Email
							input.form-control(type="email", name="email", id="email", placeholder="Email",data-ng-model="user.email")
						div.form-group
							label.control-label(for="password") Mot de passe
							input.form-control(type="password", name="password", id="password", placeholder="Mot de passe",data-ng-model="user.password")
						div.alert.alert-danger.fade.hide.errors
						button.btn.btn-primary(type="submit") Se connecter
						button.btn.btn-link(id="signupLink", type="button", data-ng-click="signup()") S'inscrire
