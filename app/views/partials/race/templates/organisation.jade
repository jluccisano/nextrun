div.container
	div.bs-callout.bs-callout-info
		h4 Infomations
		p Tous les champs  sont facultatifs. Tous les champs qui ne seront pas renseign√© n'apparaitront pas dans la vue finale.
	tabset(vertical="false" type="pills")
		tab(heading=t("race.timing"))
			div.row
				div.col-lg-8
					form.form-horizontal(name="form1" role="form" style="margin-top:10px")
						div.form-group
							label.col-lg-4.control-label=t("race.startingTime")
							div.col-lg-4
								div(class="dropdown")
									a(class="dropdown-toggle my-toggle-select" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#")
										div(class="input-group")
											input.form-control(name="startingTime" type="text" data-ng-model="race.timing.startingTime" data-date-time-input="hh:mm" placeholder=t("race.startingTime"))
											span.input-group-addon
												i.glyphicon.glyphicon-time
									ul(class="dropdown-menu" role="menu" aria-labelledby="dLabel")
										datetimepicker(data-ng-model="race.timing.startingTime"  data-datetimepicker-config="{ dropdownSelector: '.my-toggle-select', startView:'hour' }")
						div.form-group
							label.col-lg-4.control-label=t("race.briefingTime")
							div.col-lg-4
								div(class="dropdown")
									a(class="dropdown-toggle my-toggle-select" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#")
										div(class="input-group")
											input.form-control(name="briefingTime" type="text" data-ng-model="race.timing.briefingTime" data-date-time-input="hh:mm" placeholder=t("race.briefingTime"))
											span.input-group-addon
												i.glyphicon.glyphicon-time
									ul(class="dropdown-menu" role="menu" aria-labelledby="dLabel")
										datetimepicker(data-ng-model="race.timing.briefingTime"  data-datetimepicker-config="{ dropdownSelector: '.my-toggle-select', startView:'hour' }")
						div.form-group
							label.col-lg-4.control-label=t("race.checkoutBibTime")
							div.col-lg-4
								div(class="dropdown")
									a(class="dropdown-toggle my-toggle-select" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#")
										div(class="input-group")
											input.form-control(name="checkoutBibTime" type="text" data-ng-model="race.timing.checkoutBibTime" data-date-time-input="hh:mm" placeholder=t("race.checkoutBibTime"))
											span.input-group-addon
												i.glyphicon.glyphicon-time
									ul(class="dropdown-menu" role="menu" aria-labelledby="dLabel")
										datetimepicker(data-ng-model="race.timing.checkoutBibTime"  data-datetimepicker-config="{ dropdownSelector: '.my-toggle-select', startView:'hour' }")
						div.form-group
							label.col-lg-4.control-label=t("race.moreInformation")
							div.col-lg-6
								textarea.form-control(name="timingMoreInformation" rows="3" data-ng-model="race.timing.timingMoreInformation" placeholder=t("race.timingMoreInformation"))
