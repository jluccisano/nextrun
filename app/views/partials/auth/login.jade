div.container(style="margin-top:50px")
	div.row
		div.col-lg-4.col-lg-offset-4
			div.panel.panel-default
				div.panel-heading <strong>{{ 'title.login' | translate }}</strong>
				div.panel-body
					form(role="form" name="form" ng-submit="submit()" novalidate)
						
						div.form-group(ng-class="{'has-error': !form.email.$pristine && form.email.$invalid, 'has-success': !form.email.$invalid && !form.email.$pristine}")
							label.control-label(for="email" translate="field.email")
							input.form-control(type="email" name="email" placeholder="{{'field.email' | translate }}" ng-model="user.email")
							span.help-block(name='email-invalid' ng-show="form.email.$error.email" translate="validator.email.invalid")
						
						div.form-group(ng-class="{'has-error': !form.password.$pristine && form.password.$invalid, 'has-success': !form.password.$invalid && !form.password.$pristine}")
							label.control-label(type="password" for="password"  translate="field.password")
							input.form-control(type="password" name="password" placeholder="{{'field.password' | translate }}" ng-model="user.password" ng-minlength="4" ng-maxlength="16" required)
							span.help-block(ng-show="form.password.$dirty && form.password.$error.minlength" translate="validator.password.minlength")
							span.help-block(ng-show="form.password.$dirty && form.password.$error.maxlength" translate="validator.password.maxlength")
						
						button.btn.btn-primary(type="submit" name="submit" ng-disabled="form.$invalid" translate="button.login")
						button.btn.btn-link(type="button" name="signup" ng-click="signup()" translate="button.signup")
						hr
						button.btn.btn-link(type="button" name="forgotPassword" ng-click="open()" translate="button.forgotPassword")