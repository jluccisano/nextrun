header.navbar.navbar-inverse.navbar-fixed-top.custom-bs-docs-nav(role="banner" ng-Controller='HeaderController')
	div.navbar-inner
		div.container
			div.navbar-header
				a.btn-navbar(data-toggle="collapse", data-target=".bs-navbar-collapse")
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="/")
					img.img-responsive(src="client/modules/main/images/logo_officiel.png" width="25" height="25" alt="")
				a.navbar-brand(href="/" style="margin-left:-25px") NEXTRUN

			div.navbar-collapse.collapse.bs-navbar-collapse

				ul.nav.navbar-nav
					li
						a(href="/races/search" translate) Rechercher
				ul.nav.navbar-nav.navbar-right
					li.dropdown(ng-show="isLoggedIn()")
						a.dropdown-toggle(data-toggle="dropdown") {{user.username}}
							b.caret
						ul.dropdown-menu
							li
								a(href="/myraces" translate) Mes Manifestations
							li
								a(href="/users/settings" translate) Paramètres
							li
								a(ng-click="logout()" translate) Se déconnecter
					li(ng-hide="isLoggedIn()")
						form(class="navbar-form navbar-left")
							button(type="submit", class="btn btn-primary", ng-click="login()") 
								span.glyphicon.glyphicon-user 
								span(translate) Se connecter
