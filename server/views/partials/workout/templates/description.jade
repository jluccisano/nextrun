form(role="form" class="navbar-form navbar-left" name="descriptionForm" novalidate)
	div(class="form-group")
		p(ng-if="!editMode || !edit") {{workout.description}}
	div(ng-if="editMode && edit" class="form-group")
		textarea(type="text" class="form-control" rows="5" cols="50" maxlength="500" placeholder="{{'description' | translate}}" ng-model="workout.description" name="description")
	div(class="form-group" ng-if="editMode && !edit")
		button(ng-click="toggleEdit()" class="btn btn-default btn-sm")
			i(class="fa fa-pencil-square-o")
	div(class="form-group" ng-if="editMode && edit")
		button(ng-click="update()" ng-disabled="descriptionForm.$invalid" class="btn btn-primary btn-sm")
			i(class="fa fa-check")
		button(ng-click="cancel()" class="btn btn-default btn-sm")
			i(class="fa fa-remove")