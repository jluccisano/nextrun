div.row
	div.col-lg-8
		form.form-horizontal(name="form1" role="form" style="margin-top:10px")
			div.form-group
				label.col-lg-4.control-label(translate) Départ
				div.col-lg-4
					div(class="dropdown")
						a(class="dropdown-toggle my-toggle-select" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#")
							div(class="input-group")
								input.form-control(name="startingTime" type="text" ng-model="race.timing.startingTime" data-date-time-input="HH:mm" placeholder="{{ 'Départ' | translate}}")
								span.input-group-addon
									i.glyphicon.glyphicon-time
						ul(class="dropdown-menu" role="menu" aria-labelledby="dLabel")
							datetimepicker(ng-model="race.timing.startingTime"  data-datetimepicker-config="{ dropdownSelector: '.my-toggle-select', startView:'hour' }")
