div(class="modal-header")
	button(class="close" type="button" data-dismiss="modal" aria-hidden="true" ng-click="cancel()") &times;
	h4(class="modal-title" translate) Signaler une erreur
div(class="modal-body")
	div(class="row")
		div(class="col-lg-10")
			form(role="form" name="form" novalidate)
				div(class="form-group" ng-class="{'has-error': !form.type.$pristine && form.type.$invalid, 'has-success': !form.type.$invalid && !form.type.$pristine}")
					label(class="control-label" for="type")
					select(class="form-control" ng-model="feedback.type" name="type" ng-options="type.name for type in types" ng-required="true")
				div(class="form-group" ng-class="{'has-error': !form.$pristine && form.email.$invalid, 'has-success': !form.email.$invalid && !form.$pristine}")
					label(class="control-label" for="email" translate) Email
					input(class="form-control" type="email"  ng-model="feedback.email" name="email" placeholder="{{'Email' | translate}}" ng-required="true")
					span(class="help-block" ng-show="form.email.$dirty && form.email.$error.ng-required="true"" translate) Veuillez saisir votre email
					span(class="help-block" ng-show="form.email.$error.email" translate) Email invalide
				div(class="form-group")
					label(class="control-label") Message
					textarea(class="form-control" name="message" ng-model="feedback.message" rows="3" placeholder="{{'votre message' | translate}}" ng-required="true")
div(class="modal-footer")
	button(class="btn btn-default" type="button" ng-click="cancel()" translate) Annuler
	button(class="btn btn-primary" type="submit" ng-click="submit(feedback)" translate) Envoyer