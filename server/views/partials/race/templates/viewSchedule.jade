div.container
	div.row
		div.col-lg-4
			table.table.table-hover.table-condensed
				thead
					tr
						th(class="rowBasic" style="width: 40%;")
						th(class="rowBasic" style="width: 20%;")
				tbody
					tr
						td(class="rowBold") {{'Départ' | translate}}
							span :
						td(ng-if="race.timing.startingTime !== null" class="rowBasic") {{race.timing.startingTime| date:'HH:mm'}}
						td(ng-if="race.timing.startingTime === null" class="rowItalic") {{'Non communiqué' | translate}}
					tr
						td(class="rowBold") {{'Briefing' | translate}}
							span :
						td(ng-if="race.timing.briefingTime !== null" class="rowBasic") {{race.timing.briefingTime | date:'HH:mm'}}
						td(ng-if="race.timing.briefingTime === null" class="rowItalic") {{'Non communiqué' | translate}}
					tr
						td(class="rowBold") {{'Retrait des dossards' | translate}}
							span :
						td(ng-if="race.timing.checkoutBibTime !== null" class="rowBasic") {{race.timing.checkoutBibTime | date:'HH:mm'}}
						td(ng-if="race.timing.checkoutBibTime === null" class="rowItalic") {{'Non communiqué' | translate}}
					tr
						td(class="rowBold") {{'Récompenses' | translate}}
							span :
						td(ng-if="race.timing.rewardsTime !== null" class="rowBasic") {{race.timing.rewardsTime | date:'HH:mm'}}
						td(ng-if="race.timing.rewardsTime === null" class="rowItalic") {{'Non communiqué' | translate}}
	div.well(ng-if="race.timing.timingMoreInformation" ng-bind-html="race.timing.timingMoreInformation")