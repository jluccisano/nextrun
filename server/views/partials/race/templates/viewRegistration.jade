div.container
	div.row
		div.col-lg-5
			table.table.table-hover.table-condensed
				thead
					tr
						th(style="width: 50%;border:0; border-top: none;")
						th(style="width: 20%;border:0; border-top: none;")
				tbody
					tr
						td(align="left" style="border:0; border-top: none; font-weight:bold") {{'field.registrationOpeningDate' | translate}}
							span :
						td(ng-if="race.registration.registrationOpeningDate != null" align="left" style="border:0; border-top: none;") {{race.registration.registrationOpeningDate | amDateFormat:'DD MMMM YYYY'}}
						td(ng-if="race.registration.registrationOpeningDate == null" align="left" style="border:0; border-top: none;font-style:italic") {{'field.notCommunicated' | translate}}

					tr
						td(align="left" style="border:0; border-top: none; font-weight:bold") {{'field.registrationLimitDate' | translate}}
							span :
						td(ng-if="race.registration.registrationLimitDate != null" align="left" style="border:0; border-top: none;") {{race.registration.registrationLimitDate | amDateFormat:'DD MMMM YYYY'}}
						td(ng-if="race.registration.registrationLimitDate == null" align="left" style="border:0; border-top: none;font-style:italic") {{'field.notCommunicated' | translate}}

					tr
						td(align="left" style="border:0; border-top: none; font-weight:bold") {{'field.registrationWebSite' | translate}}

						td(ng-if="race.registration.registrationWebSite != null" align="left" style="border:0; border-top: none;") 
							a(ng-href="http://{{race.registration.registrationWebSite}}" target="_blank")
								span  {{race.registration.registrationWebSite}}
						td(ng-if="race.registration.registrationWebSite == null" align="left" style="border:0; border-top: none;font-style:italic") {{'field.notCommunicated' | translate}}

					tr
						td(align="left" style="border:0; border-top: none;font-weight:bold") {{'field.registrationAddress' | translate}}
							span :
						td(ng-if="race.registration.registrationAddress != null" align="left" style="border:0; border-top: none;") {{race.registration.registrationAddress}}
						td(ng-if="race.registration.registrationAddress == null" align="left" style="border:0; border-top: none;font-style:italic") {{'field.notCommunicated' | translate}}

					tr
						td(align="left" style="border:0; border-top: none;font-weight:bold") {{'field.registrationOnPlace' | translate}}
							span :
						td(ng-if="race.registration.registrationOnPlace != null" align="left" style="border:0; border-top: none;") {{race.registration.registrationOnPlace}}
						td(ng-if="race.registration.registrationOnPlace == null" align="left" style="border:0; border-top: none;font-style:italic") {{'field.notCommunicated' | translate}}

					tr
						td(align="left" style="border:0; border-top: none;font-weight:bold") {{'field.numberOfPlacesAvailable' | translate}}
							span :
						td(ng-if="race.registration.numberOfPlacesAvailable != null" align="left" style="border:0; border-top: none;") {{race.registration.numberOfPlacesAvailable}}
						td(ng-if="race.registration.numberOfPlacesAvailable == null" align="left" style="border:0; border-top: none;font-style:italic") {{'field.notCommunicated' | translate}}

	div.well(ng-if="race.registration.registrationMoreInformation" ng-bind-html="race.registration.registrationMoreInformation")