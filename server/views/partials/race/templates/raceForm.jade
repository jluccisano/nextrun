	div(class="col-lg-4 col-lg-offset-4")
		form(editable-form="editable-form" name="editableForm")
			div
				span(class="title") User name:
				a(editable-text="race.name" e-name="name" e-form="editableForm" ng-click="editableForm.$show()") {{ race.name || 'empty' }}
			div
