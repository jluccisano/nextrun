				a(editable-text="race.titi" e-name="titi" e-form="editableForm" ng-click="editableForm.$show()") {{ race.titi || 'empty' }}
			
			div
				button(type="submit" class="btn btn-default" ng-click="editableForm.$show()" ng-show="!editableForm.$visible") Edit

				span(ng-show="editableForm.$visible")
					button(type="submit" class="btn btn-primary" ng-disabled="editableForm.$waiting") Save
					button(type="button" class="btn btn-default" ng-disabled="editableForm.$waiting" ng-click="editableForm.$cancel()") cancel


