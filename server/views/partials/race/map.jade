div(ng-if="route.isVisible()" id="map_canvas")
	ui-gmap-google-map(center="{latitude: 51.219053, longitude: 4.404418 }" options="{scrollwheel: false}" zoom="13" refresh="true" draggable="true" mark-click="true")
		
