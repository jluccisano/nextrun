div(ng-if="route.isVisible()")
	include map

	div.mapControl(ng-show="route.isEditMode()")
		div.well
			form
				div(class="radio")
					label
						input(type="radio" ng-model="route._travelMode" ng-value="'DRIVING'" ) 
						span(translate) Suivre la route
				div(class="radio")
					label
						input(type="radio"  ng-model="route._travelMode" ng-value="'WALKING'") 
						span(translate) Suivre le chemin
				div(class="radio")
					label
						input(type="radio" ng-model="route._travelMode" ng-value="'NONE'") 
						span(translate) Segment direct
				div.button-group
					button.btn.btn-primary.btn-xs(ng-click="undo(route)")
						i.fa.fa-reply
						span(translate) Retour
					button.btn.btn-danger.btn-xs(ng-click="delete(route)")
						i.fa.fa-times
						span(translate) Effacer
				div
					h3 {{route.getDistance() | number:2 }} km
				div
					span D+: {{route.getAscendant() | number:0 }} m
				div
					span D-: {{route.getDescendant() | number:0 }} m
				div
					span Max: {{route.getMaxElevation() | number:0 }} m
				div
					span Min: {{route.getMinElevation() | number:0 }} m
	highchart(ng-hide="route.getType() === 'Natation'" config="route.getChartConfig()")

	div(class="row")
		div(class="col-sm-12")
			h5(translate) Ajouter une description Ã  votre parcours

		div(class="col-sm-12 animate-hide" ng-hide="editingInfo")
			div(class="well" ng-bind-html="route.data.description")
			button(class="btn btn-default" ng-click="editingInfo = !editingInfo" translate ) Editer

		div(class="col-sm-12 animate-hide" ng-show="editingInfo")
			div(text-angular ng-model="route.data.description")
			button(class="btn btn-primary" ng-click="editingInfo = !editingInfo"  translate) Valider
			button(class="btn btn-default" ng-click="editingInfo = !editingInfo" translate) Annuler



