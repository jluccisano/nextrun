div.modal-header
	button.close(type="button" data-dismiss="modal" aria-hidden="true" ng-click="cancel()") &times;
	h4.modal-title {{'title.forgotPassword' | translate }}:
div.modal-body
	div.row
		div.col-lg-10
			form(role="form" name="forgotPasswordform" style="margin-top:50px" ng-submit="submit()" novalidate)
				
				div.form-group(ng-class="{'has-error': !forgotPasswordform.$pristine && form.email.$invalid, 'has-success': !forgotPasswordform.email.$invalid && !forgotPasswordform.$pristine}")
					label.control-label(for="email" translate="field.email")
					input.form-control(type="email" ng-model="user.email" name="email" placeholder="{{'field.email' | translate }}" required)
					span.help-block(name="email-invalid" ng-show="forgotPasswordform.email.$error.email" translate="validator.email.invalid")
				button.btn.btn-default(type="button" name="cancel" ng-click="cancel()" translate="button.cancel")
				button.btn.btn-primary(type="submit" name="submit" ng-disabled="forgotPasswordform.$invalid" translate="button.send")
div.modal-footer